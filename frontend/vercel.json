{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",  # Caminho correto para o arquivo package.json dentro de /frontend
      "use": "@vercel/static-build"    # Usar o builder est√°tico para React
    }
  ],
  "routes": [
    {
      "src": "/(.*)",                  # Redireciona todas as rotas para o index.html
      "dest": "/frontend/index.html"   # Aponta para o index.html dentro da pasta frontend
    }
  ]
}
